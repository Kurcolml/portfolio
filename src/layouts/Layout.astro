---
// src/layouts/Layout.astro
const { title } = Astro.props;
import ThemeToggle from '/src/components/Theme.astro';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" href={`${import.meta.env.BASE_URL}favicon.svg`} />
  <title>{title ? `${title} | Manuel Blanco` : 'Manuel Blanco - Portfolio'}</title>
  
  <!-- CSS global -->
  <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/global.css`} />
</head>
<body>
  <header class="site-header">
    <div class="header-top">
      <a href="https://www.instagram.com/manucho.dev" target="_blank" class="logo">
        <h1>Manuel Blanco</h1>
      </a>
      <ThemeToggle />
    </div>
    <p class="subtitle">
      Programador Full Stack | Desarrollo Web | Aplicaciones Modernas | Desarrollo de Videojuegos
    </p>
  </header>

  <main>
    <slot /> <!-- Aquí se inyecta el contenido de cada página -->
  </main>

  <footer class="site-footer">
    <p>&copy; 2025 Manuel Blanco</p>
  </footer>
</body>
</html>
